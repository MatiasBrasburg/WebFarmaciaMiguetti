@using System.Text.Json
@using System.Linq
@using WebFarmaciaMiguetti.Models 

@{
    ViewData["Title"] = "Gesti√≥n de Obras Sociales";

    // 1. RECUPERACI√ìN DE DATOS
    // Convertimos a listas din√°micas para evitar errores de null
    var listaOS = (ViewBag.ListaObrasSociales as IEnumerable<dynamic>)?.ToList() ?? new List<dynamic>();
    var listaMandatarias = (ViewBag.ListaMandatarias as IEnumerable<dynamic>)?.ToList() ?? new List<dynamic>();

    // 2. ORDENAMIENTO INICIAL (Por el nuevo campo 'Nombre')
    if (listaOS.Any())
    {
        try { listaOS = listaOS.OrderBy(x => x.Nombre).ToList(); } catch { }
    }

    // 3. PREPARACI√ìN DE DATOS PARA JAVASCRIPT (Serializaci√≥n)
    
    // A. DATOS PARA EL BUSCADOR PRINCIPAL
    // Usamos las propiedades EXACTAS de tu nuevo Modelo: IdObrasSociales, Nombre, NombreMandataria
    var datosBuscadorPrincipal = listaOS.Select(os => {
        // Validaci√≥n de nulidad para el nombre de la mandataria
        string nombreMand = string.IsNullOrEmpty(os.NombreMandataria) ? "Sin Asignar" : os.NombreMandataria;

        return new {
            id = os.IdObrasSociales,  // <--- CAMBIO CLAVE: Usamos IdObrasSociales
            texto = os.Nombre + " (Mandataria: " + nombreMand + ")", // <--- CAMBIO CLAVE: Usamos Nombre
            nombre = os.Nombre // <--- CAMBIO CLAVE: Usamos Nombre
        };
    });
    var jsonOS = JsonSerializer.Serialize(datosBuscadorPrincipal);

    // B. DATOS PARA EL BUSCADOR DEL MODAL
    var datosBuscadorModal = listaMandatarias.Select(m => new {
        id = m.IdMandatarias,
        texto = m.RazonSocial + " (CUIT: " + (m.Cuit > 0 ? m.Cuit.ToString() : "-") + ")",
        nombre = m.RazonSocial
    });
    var jsonMandatarias = JsonSerializer.Serialize(datosBuscadorModal);
}

<style>
    /* ========== ESTILOS UX 85 A√ëOS ========== */
    body { font-family: 'Roboto', 'Open Sans', Arial, sans-serif; background-color: #f8f9fa; }

    h1 {
        font-size: clamp(2rem, 5vw, 2.8rem);
        font-weight: bold;
        color: #000;
        margin-bottom: 2rem;
    }

    .container { width: 95%; max-width: 1600px; margin: 0 auto; padding: 1rem; }

    /* BOTONES GIGANTES */
    .btn-giant {
        font-size: clamp(1rem, 2vw, 1.4rem);
        padding: clamp(0.8rem, 1.5vw, 1rem) clamp(1rem, 2vw, 2rem);
        font-weight: bold;
        border: 3px solid;
        margin: 0.3rem;
        white-space: nowrap;
    }
    .btn-success { background-color: #198754; border-color: #198754; color: #fff; }
    .btn-warning { background-color: #ffc107; border-color: #ffc107; color: #000; }
    .btn-danger { background-color: #dc3545; border-color: #dc3545; color: #fff; }
    .btn-info { background-color: #0dcaf0; border-color: #0dcaf0; color: #000; }
    .btn-secondary { background-color: #6c757d; border-color: #6c757d; color: #fff; }

    /* BUSCADOR TIPO SPOTIFY */
    .buscador-wrapper {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        margin-bottom: 1.5rem;
    }

    .buscador-input-group {
        display: flex;
        align-items: center;
        gap: 10px;
        width: 100%;
        max-width: 500px;
    }

    .input-buscador {
        font-size: 1.3rem;
        padding: 10px 15px;
        border: 3px solid #0d6efd;
        font-weight: bold;
        width: 100%;
    }

    /* LISTAS DE SUGERENCIAS FLOTANTES */
    .lista-sugerencias {
        position: absolute;
        top: 100%;
        right: 0; 
        width: 100%;
        max-width: 500px;
        background: white;
        border: 3px solid #000;
        border-top: none;
        z-index: 1055;
        display: none;
        max-height: 300px;
        overflow-y: auto;
        box-shadow: 0px 10px 15px rgba(0,0,0,0.2);
    }
    
    .lista-sugerencias-modal { right: auto; left: 0; }

    .item-sugerencia {
        padding: 15px;
        font-size: 1.2rem;
        border-bottom: 1px solid #ddd;
        cursor: pointer;
        color: #000;
        font-weight: 500;
    }

    .item-sugerencia:hover { background-color: #0d6efd; color: white; }

    /* TABLA */
    .table-responsive { border: 3px solid #000; background-color: white; }
    .table th {
        background-color: #343a40;
        color: white;
        font-size: 1.2rem;
        padding: 15px;
        vertical-align: middle;
    }
    .table td {
        font-size: 1.1rem;
        vertical-align: middle;
        padding: 15px;
        font-weight: 500;
        border-bottom: 2px solid #dee2e6;
    }
    .fila-os { display: table-row !important; transition: background-color 0.5s ease; }

    /* FORMULARIOS */
    .form-control { border: 2px solid #6c757d; font-size: 1.1rem; padding: 10px; }
    .form-control:focus { border-color: #ffc107; box-shadow: 0 0 0 0.25rem rgba(255,193,7,0.5); }
    .form-label { font-weight: bold; font-size: 1.1rem; }
    
    .form-check-input { width: 2em; height: 2em; margin-top: 0; border: 2px solid #555; }
    .form-check-label { font-size: 1.2rem; margin-left: 10px; padding-top: 5px; cursor: pointer;}
    .form-check { display: flex; align-items: center; padding: 10px; background-color: #e9ecef; border-radius: 5px; margin-bottom: 10px;}
</style>

<div class="container mt-5">
    <h1>üè• GESTI√ìN DE OBRAS SOCIALES</h1>

    @if (TempData["MensajeExito"] != null) {
        <div class="alert alert-success alert-dismissible fade show fs-4 fw-bold" role="alert">
            ‚úÖ @TempData["MensajeExito"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["MensajeError"] != null) {
        <div class="alert alert-danger alert-dismissible fade show fs-4 fw-bold" role="alert">
            ‚ùå @TempData["MensajeError"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <button type="button" class="btn btn-success btn-giant" onclick="abrirModalAgregar()">
            ‚ûï AGREGAR O. SOCIAL
        </button>

        <div class="buscador-wrapper">
            <div class="buscador-input-group">
                <label for="inputBuscadorMain" class="fs-4 fw-bold"> BUSCAR:</label>
                <input type="text" class="form-control input-buscador" id="inputBuscadorMain" 
                       placeholder="Nombre O.S. o Mandataria..." autocomplete="off">
            </div>
            <div id="listaSugerenciasMain" class="lista-sugerencias"></div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    
                    <th>NOMBRE O.S.</th>
                    <th>MANDATARIA</th>
                    <th>C√ìD. BONIF.</th>
                    <th>NOMBRE PLAN</th>
                    <th>PREPAGA</th>
                    <th>ACTIVA</th>
                    <th>ACCIONES</th>
                </tr>
            </thead>
            <tbody id="tbodyOS">
                @if (listaOS != null && listaOS.Count > 0)
                {
                    @foreach (var os in listaOS)
                    {
                        // 1. OBTENCI√ìN DE DATOS SEG√öN EL NUEVO MODELO
                        // Usamos 'Nombre' en vez de 'NombreOS'
                        string nombreOsJs = System.Web.HttpUtility.JavaScriptStringEncode(os.Nombre);
                        
                        // Usamos la nueva propiedad 'NombreMandataria' directa
                        string nombreMandataria = string.IsNullOrEmpty(os.NombreMandataria) ? "-" : os.NombreMandataria;
                        string nombreMandJs = System.Web.HttpUtility.JavaScriptStringEncode(nombreMandataria);
                        
                        string nombrePlanJs = System.Web.HttpUtility.JavaScriptStringEncode(os.NombreCodigoBonificacion ?? "");
                        
                        // 2. RENDERIZADO DE FILA
                        // Nota: data-id usa el nuevo IdObrasSociales
                        <tr class="fila-os" data-id="@os.IdObrasSociales">
                        
                            <td>@os.Nombre</td> <td class="fw-bold text-primary">@nombreMandataria</td> <td>@(os.CodigoBonificacion > 0 ? os.CodigoBonificacion.ToString() : "-")</td>
                            <td>@(string.IsNullOrEmpty(os.NombreCodigoBonificacion) ? "-" : os.NombreCodigoBonificacion)</td>
                            <td>@((os.EsPrepaga == true) ? "S√ç" : "NO")</td>
                            <td>@((os.Activa == true) ? "S√ç" : "NO")</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <button type="button" class="btn btn-warning btn-giant"
                                            onclick="abrirModalModificar(@os.IdObrasSociales, '@nombreOsJs', @os.IdMandataria, '@nombreMandJs', @((os.EsPrepaga == true).ToString().ToLower()), @((os.Activa == true).ToString().ToLower()))">
                                        ‚úèÔ∏è
                                    </button>
                                    
                                    <button type="button" class="btn btn-info btn-giant"
                                            onclick="abrirModalPlanes(@os.IdObrasSociales, '@nombreOsJs', '@(os.CodigoBonificacion ?? 0)', '@nombrePlanJs')">
                                        üìã
                                    </button>

                                    <button type="button" class="btn btn-danger btn-giant"
                                            onclick="abrirModalEliminar(@os.IdObrasSociales, '@nombreOsJs')">
                                        üóëÔ∏è
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="8" class="text-center fs-4">No hay Obras Sociales cargadas.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modalOS" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-3 border-dark">
            <form method="post" asp-controller="Home" asp-action="ABM_OS">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title fw-bold" id="modalTitulo">GESTI√ìN</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <input type="hidden" name="IdOS" id="inputIdOS" value="0">
                    <input type="hidden" name="QueToco" id="inputQueToco" value="">
                    
                    <input type="hidden" name="IdMandatarias" id="inputIdMandatariaHidden" value="0">

                    <div id="divFormulario">
                        <div class="mb-3">
                            <label class="form-label">üè• NOMBRE OBRA SOCIAL</label>
                            <input type="text" class="form-control" name="NombreOS" id="inputNombreOS" required>
                        </div>

                        <div class="mb-3 position-relative">
                            <label class="form-label">üè¢ MANDATARIA ASOCIADA</label>
                            <input type="text" class="form-control" id="inputMandatariaModal" 
                                   placeholder="Escriba para buscar mandataria..." autocomplete="off" required>
                            <div id="listaSugerenciasModal" class="lista-sugerencias lista-sugerencias-modal"></div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="EsPrepaga" id="chkEsPrepaga" value="true">
                                    <label class="form-check-label" for="chkEsPrepaga">Es Prepaga / Mutual</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="Activa" id="chkActiva" value="true" checked>
                                    <label class="form-check-label" for="chkActiva">Est√° Activa</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="divMensajeEliminar" class="alert alert-danger text-center fw-bold fs-4" style="display:none;">
                        ‚ö†Ô∏è ¬øELIMINAR <span id="spanNombreEliminar"></span>?
                        <br><small>Esta acci√≥n es irreversible.</small>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary btn-giant" data-bs-dismiss="modal">‚ùå NO</button>
                    <button type="submit" class="btn btn-success btn-giant" id="btnConfirmarModal">‚úÖ S√ç, CONFIRMAR</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="modalPlanes" tabindex="-1" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-3 border-info">
            <form method="post" asp-controller="Home" asp-action="ABM_OS">
                <div class="modal-header bg-info text-dark">
                    <h5 class="modal-title fw-bold">üìã PLANES DE: <span id="spanNombreOSPlan"></span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <input type="hidden" name="IdOS" id="inputIdOSPlan" value="0">
                    <input type="hidden" name="QueToco" value="Planes">

                    <div class="mb-3">
                        <label class="form-label">üìù NOMBRE DEL PLAN</label>
                        <input type="text" class="form-control" name="NombreCodigoBonificacion" id="inputNombrePlan" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">üî¢ C√ìDIGO BONIFICACI√ìN</label>
                        <input type="number" class="form-control" name="CodigoBonificacion" id="inputCodigoPlan" required>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary btn-giant" data-bs-dismiss="modal">‚ùå CANCELAR</button>
                    <button type="submit" class="btn btn-info btn-giant">üíæ GUARDAR PLAN</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // ============================================================
    // 1. CARGA DE DATOS DESDE RAZOR (SERIALIZADOS A JSON)
    // ============================================================
    var datosBuscadorMain = @Html.Raw(jsonOS);
    var datosBuscadorModal = @Html.Raw(jsonMandatarias);

    // ============================================================
    // 2. L√ìGICA BUSCADOR PRINCIPAL (TABLA)
    // ============================================================
    var inputMain = document.getElementById('inputBuscadorMain');
    var listaMain = document.getElementById('listaSugerenciasMain');
    var tbody = document.getElementById('tbodyOS');

    inputMain.addEventListener('input', function() {
        var texto = this.value.toLowerCase().trim();
        listaMain.innerHTML = ''; 

        if (texto.length === 0) { listaMain.style.display = 'none'; return; }

        var coincidencias = datosBuscadorMain.filter(function(item) {
            return (item.texto && item.texto.toLowerCase().includes(texto));
        });

        if (coincidencias.length === 0) { listaMain.style.display = 'none'; return; }

        coincidencias.forEach(function(item) {
            var div = document.createElement('div');
            div.className = 'item-sugerencia';
            div.innerHTML = item.texto; 
            div.addEventListener('click', function() {
                inputMain.value = item.nombre;
                listaMain.style.display = 'none';
                moverFilaAlPrincipio(item.id); 
            });
            listaMain.appendChild(div);
        });
        listaMain.style.display = 'block'; 
    });

    function moverFilaAlPrincipio(id) {
        // data-id ahora coincide con IdObrasSociales
        var fila = document.querySelector('.fila-os[data-id="' + id + '"]');
        if (fila) {
            tbody.prepend(fila); 
            fila.style.backgroundColor = '#fff3cd'; // Amarillo
            fila.scrollIntoView({ behavior: 'smooth', block: 'center' });
            setTimeout(function() { fila.style.backgroundColor = ''; }, 3000);
        }
    }

    // ============================================================
    // 3. L√ìGICA BUSCADOR MODAL (MANDATARIAS)
    // ============================================================
    var inputMandModal = document.getElementById('inputMandatariaModal');
    var inputIdMandHidden = document.getElementById('inputIdMandatariaHidden');
    var listaModal = document.getElementById('listaSugerenciasModal');

    inputMandModal.addEventListener('input', function() {
        var texto = this.value.toLowerCase().trim();
        listaModal.innerHTML = '';
        inputIdMandHidden.value = "0"; 

        if (texto.length === 0) { listaModal.style.display = 'none'; return; }

        var coincidencias = datosBuscadorModal.filter(function(item) {
            return (item.texto && item.texto.toLowerCase().includes(texto));
        });

        if (coincidencias.length === 0) { listaModal.style.display = 'none'; return; }

        coincidencias.forEach(function(item) {
            var div = document.createElement('div');
            div.className = 'item-sugerencia';
            div.innerHTML = item.texto; 
            div.addEventListener('click', function() {
                inputMandModal.value = item.nombre; 
                inputIdMandHidden.value = item.id;  
                listaModal.style.display = 'none';
            });
            listaModal.appendChild(div);
        });
        listaModal.style.display = 'block'; 
    });

    document.addEventListener('click', function(e) {
        if (e.target !== inputMain && e.target !== listaMain) { listaMain.style.display = 'none'; }
        if (e.target !== inputMandModal && e.target !== listaModal) { listaModal.style.display = 'none'; }
    });

    // ============================================================
    // 4. L√ìGICA DE APERTURA DE MODALES
    // ============================================================
    var modalOS = new bootstrap.Modal(document.getElementById('modalOS'));
    var modalPlanes = new bootstrap.Modal(document.getElementById('modalPlanes'));
    
    // Variables Elementos
    var modalTitulo = document.getElementById('modalTitulo');
    var inputIdOS = document.getElementById('inputIdOS');
    var inputQueToco = document.getElementById('inputQueToco');
    var inputNombreOS = document.getElementById('inputNombreOS');
    var chkEsPrepaga = document.getElementById('chkEsPrepaga');
    var chkActiva = document.getElementById('chkActiva');
    var divFormulario = document.getElementById('divFormulario');
    var divMensajeEliminar = document.getElementById('divMensajeEliminar');
    var spanNombreEliminar = document.getElementById('spanNombreEliminar');
    var btnConfirmarModal = document.getElementById('btnConfirmarModal');

    function abrirModalAgregar() {
        modalTitulo.textContent = '‚ûï AGREGAR OBRA SOCIAL';
        btnConfirmarModal.className = 'btn btn-success btn-giant';
        btnConfirmarModal.textContent = 'üíæ GUARDAR';

        inputQueToco.value = 'Agregar';
        inputIdOS.value = '0';
        inputNombreOS.value = '';
        inputMandModal.value = '';
        inputIdMandHidden.value = '0'; // Se resetea el ID hidden de la mandataria

        chkEsPrepaga.checked = false;
        chkActiva.checked = true;

        inputNombreOS.required = true;
        inputMandModal.required = true;

        divFormulario.style.display = 'block';
        divMensajeEliminar.style.display = 'none';
        modalOS.show();
        setTimeout(() => inputNombreOS.focus(), 500);
    }

    function abrirModalModificar(id, nombre, idMand, nombreMand, esPrepaga, activa) {
        modalTitulo.textContent = '‚úèÔ∏è MODIFICAR OBRA SOCIAL';
        btnConfirmarModal.className = 'btn btn-warning btn-giant';
        btnConfirmarModal.textContent = 'üíæ GUARDAR CAMBIOS';

        inputQueToco.value = 'Modificar';
        inputIdOS.value = id;      // Viene de IdObrasSociales
        inputNombreOS.value = nombre; // Viene de Nombre

        // Cargar datos de Mandataria
        inputIdMandHidden.value = idMand; // Viene de IdMandataria (singular en ObrasSociales)
        inputMandModal.value = nombreMand; // Viene de NombreMandataria

        chkEsPrepaga.checked = esPrepaga;
        chkActiva.checked = activa;

        inputNombreOS.required = true;
        inputMandModal.required = true;

        divFormulario.style.display = 'block';
        divMensajeEliminar.style.display = 'none';
        modalOS.show();
    }

    function abrirModalEliminar(id, nombre) {
        modalTitulo.textContent = 'üóëÔ∏è ELIMINAR OBRA SOCIAL';
        btnConfirmarModal.className = 'btn btn-danger btn-giant';
        btnConfirmarModal.textContent = 'üóëÔ∏è CONFIRMAR ELIMINACI√ìN';

        inputQueToco.value = 'Eliminar';
        inputIdOS.value = id;
        spanNombreEliminar.textContent = nombre;

        inputNombreOS.required = false;
        inputMandModal.required = false;

        divFormulario.style.display = 'none';
        divMensajeEliminar.style.display = 'block';
        modalOS.show();
    }

    var inputIdOSPlan = document.getElementById('inputIdOSPlan');
    var spanNombreOSPlan = document.getElementById('spanNombreOSPlan');
    var inputNombrePlan = document.getElementById('inputNombrePlan');
    var inputCodigoPlan = document.getElementById('inputCodigoPlan');

    function abrirModalPlanes(id, nombreOS, codigo, nombrePlan) {
        inputIdOSPlan.value = id;
        spanNombreOSPlan.textContent = nombreOS;
        inputCodigoPlan.value = (codigo == '0') ? '' : codigo;
        inputNombrePlan.value = nombrePlan;
        modalPlanes.show();
        setTimeout(() => inputNombrePlan.focus(), 500);
    }
</script>
}