@using System.Text.Json
@using System.Linq
@{
    ViewData["Title"] = "Gesti√≥n de Mandatarias";
    
    // Recuperamos la lista
    var listaRaw = ViewBag.ListaMandatarias as IEnumerable<dynamic>;
    var listaMandatarias = listaRaw?.ToList() ?? new List<dynamic>();
    
    // Ordenamos alfab√©ticamente al inicio
    if (listaMandatarias.Any())
    {
        try {
            listaMandatarias = listaMandatarias.OrderBy(m => m.RazonSocial).ToList();
        } catch { }
    }

    // SERIALIZACI√ìN JSON: Datos para el autocompletado
    var jsonOpciones = JsonSerializer.Serialize(listaMandatarias.Select(m => new { 
        id = m.IdMandatarias, 
        texto = m.RazonSocial + " (CUIT: " + (m.Cuit > 0 ? m.Cuit.ToString() : "-") + ")",
        nombre = m.RazonSocial, 
        cuit = m.Cuit.ToString() 
    }));
}

<style>
    /* ========== ESTILOS GENERALES ========== */
    body {
        font-family: 'Roboto', 'Open Sans', Arial, sans-serif;
        background-color: #f8f9fa;
    }

    h1 {
        font-size: clamp(2rem, 5vw, 2.8rem);
        font-weight: bold;
        color: #000;
        margin-bottom: 2rem;
    }

    .container {
        width: 95%;
        max-width: 1400px;
        margin: 0 auto;
        padding: 1rem;
    }

    /* ========== BOTONES GIGANTES ========== */
    .btn-giant {
        font-size: clamp(1rem, 2vw, 1.4rem);
        padding: clamp(0.8rem, 1.5vw, 1rem) clamp(1rem, 2vw, 2rem);
        font-weight: bold;
        border: 3px solid;
        margin: 0.3rem;
        white-space: nowrap;
    }
    .btn-success { background-color: #198754; border-color: #198754; color: #fff; }
    .btn-warning { background-color: #ffc107; border-color: #ffc107; color: #000; }
    .btn-danger { background-color: #dc3545; border-color: #dc3545; color: #fff; }
    .btn-secondary { background-color: #6c757d; border-color: #6c757d; color: #fff; }

    /* ========== BUSCADOR CON AUTOCOMPLETADO ========== */
    .buscador-wrapper {
        position: relative; 
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        margin-bottom: 1.5rem;
    }

    .buscador-input-group {
        display: flex;
        align-items: center;
        gap: 10px;
        width: 100%;
        max-width: 500px;
    }

    .input-buscador {
        font-size: 1.3rem;
        padding: 10px 15px;
        border: 3px solid #0d6efd;
        font-weight: bold;
        width: 100%;
    }

    /* La lista de sugerencias flotante */
    .lista-sugerencias {
        position: absolute;
        top: 100%;
        right: 0;
        width: 100%;
        max-width: 500px;
        background: white;
        border: 3px solid #000;
        border-top: none;
        z-index: 1000;
        display: none;
        max-height: 300px;
        overflow-y: auto;
        box-shadow: 0px 10px 15px rgba(0,0,0,0.2);
    }

    .item-sugerencia {
        padding: 15px;
        font-size: 1.2rem;
        border-bottom: 1px solid #ddd;
        cursor: pointer;
        color: #000;
        font-weight: 500;
    }
.active-sugerencia {
        background-color: #0d6efd; 
        color: white;
    }
    .item-sugerencia:hover {
        background-color: #0d6efd; 
        color: white;
    }

    /* ========== TABLA ========== */
    .table-responsive {
        border: 3px solid #000;
    }
    .table th {
        background-color: #343a40;
        color: white;
        font-size: 1.2rem;
        padding: 15px;
    }
    .table td {
        font-size: 1.1rem;
        vertical-align: middle;
        padding: 15px;
        font-weight: 500;
    }
    .fila-mandataria { display: table-row !important; transition: background-color 0.5s ease; }

    /* Inputs Modal */
    .form-control { border: 2px solid #6c757d; font-size: 1.1rem; padding: 10px; }
    .form-control:focus { border-color: #ffc107; box-shadow: 0 0 0 0.25rem rgba(255,193,7,0.5); }
</style>

<div class="container mt-5">
    <h1>üìã GESTI√ìN DE MANDATARIAS</h1>

    @if (TempData["MensajeExito"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show fs-4 fw-bold" role="alert">
            ‚úÖ @TempData["MensajeExito"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <button type="button" class="btn btn-success btn-giant" onclick="abrirModalAgregar()">
            ‚ûï AGREGAR NUEVA
        </button>

        <div class="buscador-wrapper">
            <div class="buscador-input-group">
                <label for="inputBuscador" class="fs-4 fw-bold">üîç BUSCAR:</label>
                <input type="text" class="form-control input-buscador" id="inputBuscador" 
                       placeholder="Escriba nombre o CUIT..." autocomplete="off">
            </div>
            <div id="listaSugerencias" class="lista-sugerencias"></div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
          

                    <th>NOMBRE</th>
                    <th>CUIT</th>
                    <th>DESCRIPCI√ìN</th>
                    <th>UBICACI√ìN</th>
                    <th>ACCIONES</th>
                </tr>
            </thead>
            <tbody id="tbodyMandatarias">
                @if (listaMandatarias != null && listaMandatarias.Count > 0)
                {
                    @foreach (var m in listaMandatarias)
                    {
                        <tr class="fila-mandataria" data-id="@m.IdMandatarias">
                          
                            <td class="col-nombre">@m.RazonSocial</td>
                            <td class="col-cuit">@(m.Cuit > 0 ? m.Cuit.ToString() : "-")</td>
                            <td class="col-descripcion">@(string.IsNullOrEmpty(m.Descripcion) ? "-" : m.Descripcion)</td>
                            <td class="col-direccion">@(string.IsNullOrEmpty(m.Direccion) ? "-" : m.Direccion)</td>
                            <td>
                                <button type="button" class="btn btn-warning btn-giant" 
                                        onclick='abrirModalModificar(@m.IdMandatarias, 
                                        "@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(m.RazonSocial))", 
                                        @(m.Cuit), 
                                        "@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(m.Descripcion ?? ""))", 
                                        "@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(m.Direccion ?? ""))")'>
                                    ‚úèÔ∏è
                                </button>
                                <button type="button" class="btn btn-danger btn-giant" 
                                        onclick='abrirModalEliminar(@m.IdMandatarias, 
                                        "@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(m.RazonSocial))")'>
                                    üóëÔ∏è
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="6" class="text-center fs-4">No hay datos cargados.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modalMandataria" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-3 border-dark">
           <form method="post" asp-controller="Home" asp-action="ModificarMandataria" id="formMandataria">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title fw-bold" id="modalTitulo">GESTI√ìN</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <input type="hidden" name="IdMandataria" id="inputIdMandataria" value="0">
                    <input type="hidden" name="QueToco" id="inputQueToco" value="">

                    <div id="divFormulario">
                        <div class="mb-3">
                            <label class="form-label fs-5 fw-bold">üìù NOMBRE </label>
                            <input type="text" class="form-control" name="NombreMandataria" id="inputNombreMandataria" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fs-5 fw-bold">üî¢ CUIT</label>
                            <input type="number" class="form-control" name="Cuit" id="inputCuit">
                        </div>
                        <div class="mb-3">
                            <label class="form-label fs-5 fw-bold">üìÑ DESCRIPCI√ìN</label>
                            <textarea class="form-control" name="Descripcion" id="inputDescripcion" rows="2"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fs-5 fw-bold">üìç UBICACI√ìN</label>
                            <input type="text" class="form-control" name="Direccion" id="inputDireccion">
                        </div>
                    </div>
                    <div id="divMensajeEliminar" class="alert alert-danger text-center fw-bold fs-4" style="display:none;">
                        ‚ö†Ô∏è ¬øELIMINAR <span id="spanNombreEliminar"></span>?
                    </div>
                    <div id="divAdvertenciaFinal" class="text-center p-3" style="display:none; background-color: #ffcccc; border: 4px solid #dc3545; color: #a00;">
    <h2 class="fw-bold">üõë ¬°ALTO! ¬°PELIGRO! üõë</h2>
    <p class="fs-4 fw-bold text-dark mt-3">
        Si borra esta Mandataria, se eliminar√°n AUTOM√ÅTICAMENTE:
    </p>
    <ul class="text-start d-inline-block fs-4 fw-bold text-dark">
        <li>‚ùå Todas sus Obras Sociales</li>
        <li>‚ùå Todas sus Liquidaciones </li>
        <li>‚ùå Todos sus Pagos y Deudas</li>
    </ul>
    <p class="fs-3 fw-bold mt-3 text-black bg-warning p-2 border border-dark">
        ESTA ACCI√ìN ES IRREVERSIBLE.
    </p>
</div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary btn-giant" data-bs-dismiss="modal">‚ùå NO</button>
                    <button type="submit" class="btn btn-success btn-giant" id="btnConfirmarModal">‚úÖ S√ç, CONFIRMAR</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // 1. OBTENEMOS LOS DATOS DE C# PARA USARLOS EN JS
    var datosOpciones = @Html.Raw(jsonOpciones);
var formMandataria = document.getElementById('formMandataria');
var divAdvertenciaFinal = document.getElementById('divAdvertenciaFinal');
    // ELEMENTOS DEL BUSCADOR
    var inputBuscador = document.getElementById('inputBuscador');
    var listaSugerencias = document.getElementById('listaSugerencias');
    var tbody = document.getElementById('tbodyMandatarias');

    // EVENTO: AL ESCRIBIR
    // 1. ACTIVAR BUSCADOR CON FLECHAS
    setupAuto('inputBuscador', 'listaSugerencias', null, datosOpciones);

    // 2. ACTIVAR EL ENTER PARA SALTAR EN EL FORMULARIO
    setupEnterNavigation('inputNombreMandataria', 'inputCuit');
    setupEnterNavigation('inputCuit', 'inputDescripcion');
    setupEnterNavigation('inputDescripcion', 'inputDireccion');
    setupEnterNavigation('inputDireccion', 'btnConfirmarModal');
    // ==============================================================
    // FUNCI√ìN CLAVE: MUEVE LA FILA AL TOPE Y LA RESALTA
    // ==============================================================
    function moverFilaAlPrincipio(idSeleccionado) {
        // Buscamos la fila en todo el documento
        var fila = document.querySelector('.fila-mandataria[data-id="' + idSeleccionado + '"]');
        
        if (fila) {
            // 1. Mostrar todas las filas primero (por si hab√≠a alg√∫n filtro viejo)
            document.querySelectorAll('.fila-mandataria').forEach(f => f.style.display = 'table-row');

            // 2. MOVER AL PRIMER LUGAR DEL TBODY
            tbody.prepend(fila);

            // 3. Efecto Visual de "Aqu√≠ estoy"
            fila.style.backgroundColor = '#fff3cd'; // Amarillo fuerte
            fila.scrollIntoView({ behavior: 'smooth', block: 'center' }); // Asegurar que se vea

            // 4. Quitar el color suavemente despu√©s de 3 segundos
            setTimeout(function() {
                fila.style.backgroundColor = ''; 
            }, 3000);
        }
    }


    // ==========================================
    // L√ìGICA DE MODALES (CORREGIDA LA ELIMINACI√ìN)
    // ==========================================
    var modalElement = document.getElementById('modalMandataria');
    var modal = new bootstrap.Modal(modalElement);
    var modalTitulo = document.getElementById('modalTitulo');
    var inputIdMandataria = document.getElementById('inputIdMandataria');
    var inputQueToco = document.getElementById('inputQueToco');
    var inputNombreMandataria = document.getElementById('inputNombreMandataria');
    var inputCuit = document.getElementById('inputCuit');
    var inputDescripcion = document.getElementById('inputDescripcion');
    var inputDireccion = document.getElementById('inputDireccion');
    var divFormulario = document.getElementById('divFormulario');
    var divMensajeEliminar = document.getElementById('divMensajeEliminar');
    var spanNombreEliminar = document.getElementById('spanNombreEliminar');
    var btnConfirmarModal = document.getElementById('btnConfirmarModal');

    function abrirModalAgregar() {
        modalTitulo.textContent = '‚ûï AGREGAR';
        btnConfirmarModal.className = 'btn btn-success btn-giant';
        inputQueToco.value = 'Agregar';
        inputIdMandataria.value = '0';
        inputNombreMandataria.value = '';
        inputCuit.value = '';
        inputDescripcion.value = '';
        inputDireccion.value = '';
        btnConfirmarModal.type = "submit"; 
btnConfirmarModal.onclick = null; // Quita la funci√≥n de borrado
divAdvertenciaFinal.style.display = 'none';
        // ACTIVAR REQUIRED
        inputNombreMandataria.required = true;

        divFormulario.style.display = 'block';
        divMensajeEliminar.style.display = 'none';
        modal.show();
        setTimeout(() => inputNombreMandataria.focus(), 500);
    }

    function abrirModalModificar(id, nombre, cuit, desc, dir) {
        modalTitulo.textContent = '‚úèÔ∏è MODIFICAR';
        btnConfirmarModal.className = 'btn btn-warning btn-giant';
        inputQueToco.value = 'Modificar';
        inputIdMandataria.value = id;
        inputNombreMandataria.value = nombre;
        inputCuit.value = (cuit > 0) ? cuit : '';
        inputDescripcion.value = desc;
        inputDireccion.value = dir;
btnConfirmarModal.type = "submit"; 
btnConfirmarModal.onclick = null; // Quita la funci√≥n de borrado
divAdvertenciaFinal.style.display = 'none';
        // ACTIVAR REQUIRED
        inputNombreMandataria.required = true;

        divFormulario.style.display = 'block';
        divMensajeEliminar.style.display = 'none';
        modal.show();
        setTimeout(() => inputNombreMandataria.focus(), 500);
    }

    function abrirModalEliminar(id, nombre) {
        modalTitulo.textContent = 'üóëÔ∏è ELIMINAR';
        
        // Ocultamos form y alerta roja, mostramos alerta amarilla
        divFormulario.style.display = 'none';
        divMensajeEliminar.style.display = 'block';
        divAdvertenciaFinal.style.display = 'none'; // Asegurar que est√© oculta al inicio

        inputQueToco.value = 'Eliminar';
        inputIdMandataria.value = id;
        spanNombreEliminar.textContent = nombre;

        // Desactivar required
        inputNombreMandataria.required = false;

        // CONFIGURAR BOT√ìN - FASE 1
        btnConfirmarModal.className = 'btn btn-warning btn-giant text-dark';
        btnConfirmarModal.textContent = '‚ö†Ô∏è SI...';
        btnConfirmarModal.type = "button"; // IMPORTANTE: Evita el submit autom√°tico
        
        // Al hacer click, pasamos a la Fase 2
        btnConfirmarModal.onclick = mostrarAdvertenciaFinal;

        modal.show();
    }

    function mostrarAdvertenciaFinal() {
        // FASE 2: MOSTRAR ALERTA ROJA
        divMensajeEliminar.style.display = 'none';
        divAdvertenciaFinal.style.display = 'block';

        // CONFIGURAR BOT√ìN - FASE FINAL
        btnConfirmarModal.className = 'btn btn-danger btn-giant py-3 px-5 fw-bold';
        btnConfirmarModal.innerHTML = 'üî• S√ç, BORRAR TODO';
        
        // Ahora s√≠, enviamos el formulario
        btnConfirmarModal.onclick = function() {
            formMandataria.submit();
        };
    }
    // ============================================================
    // üöÄ MOTOR DE NAVEGACI√ìN (NO TOCAR)
    // ============================================================
    
    var currentFocus = -1; 

    function setupAuto(inpId, listId, hidId, fuenteDatos) {
        const inp = document.getElementById(inpId);
        const list = document.getElementById(listId);
        const hid = document.getElementById(hidId);
        
        if (!inp) return; 

        inp.addEventListener("input", function() {
            const t = this.value.toLowerCase();
            list.innerHTML = '';
            currentFocus = -1;
            
            if (t.length < 1) { 
                list.style.display = 'none'; 
                if(hid) hid.value = "0"; 
                return; 
            }
            
            const f = fuenteDatos.filter(x => x.nombre.toLowerCase().includes(t)).slice(0, 50);
            
            if (f.length === 0) { 
                list.innerHTML = '<div class="item-sugerencia text-muted">üö´ NO EXISTE</div>'; 
                list.style.display = 'block'; 
                return; 
            }
            
            f.forEach(x => {
                const item = document.createElement('div');
                item.className = 'item-sugerencia'; 
                item.innerHTML = x.texto || x.nombre; // Adaptado para mostrar texto completo si existe
                item.dataset.id = x.id; 
                item.dataset.nombre = x.nombre;
                
                item.addEventListener("click", function() {
                    inp.value = this.dataset.nombre;
                    if(hid) {
                        hid.value = this.dataset.id;
                        hid.dispatchEvent(new Event('change'));
                    }
                    list.style.display = 'none';
                    // Si existe la funci√≥n moverFilaAlPrincipio (espec√≠fico de esta vista), la llamamos
                    if(typeof moverFilaAlPrincipio === 'function') {
                        moverFilaAlPrincipio(this.dataset.id);
                    }
                });
                list.appendChild(item);
            });
            list.style.display = 'block';
        });

        inp.addEventListener("keydown", function(e) {
            let x = list.getElementsByTagName("div");
            if (e.key === "ArrowDown") {
                currentFocus++;
                addActive(x);
            } else if (e.key === "ArrowUp") {
                currentFocus--;
                addActive(x);
            } else if (e.key === "Enter") {
                e.preventDefault(); 
                if (currentFocus > -1) {
                    if (x) x[currentFocus].click();
                } else if (list.style.display === "block" && x.length > 0) {
                     x[0].click();
                }
            }
        });

        inp.addEventListener("blur", function() { 
            setTimeout(() => { list.style.display = 'none'; }, 200); 
        });
    }

    function addActive(x) {
        if (!x) return false;
        removeActive(x);
        if (currentFocus >= x.length) currentFocus = 0;
        if (currentFocus < 0) currentFocus = (x.length - 1);
        x[currentFocus].classList.add("active-sugerencia");
        x[currentFocus].scrollIntoView({ block: "nearest" });
    }
    function removeActive(x) {
        for (let i = 0; i < x.length; i++) x[i].classList.remove("active-sugerencia");
    }

    function setupEnterNavigation(curr, next) {
        const el = document.getElementById(curr);
        if(el) {
            el.addEventListener('keypress', function(e) {
                if(e.key === 'Enter') {
                    e.preventDefault();
                    const n = document.getElementById(next);
                    if(n) { n.focus(); if(n.select) n.select(); }
                }
            });
        }
    }
</script>
}