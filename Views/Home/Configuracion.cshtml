        background-color: #fff;
    }

    .config-titulo {
        text-align: center;
        font-size: 30px;
        font-weight: bold;
        margin-bottom: 30px;
        text-decoration: underline;
    }

    .form-group-grande {
        margin-bottom: 25px;
    }

    .label-grande {
        display: block;
        font-size: 22px;
        font-weight: bold;
        margin-bottom: 10px;
        color: #000;
    }

    .input-grande {
        width: 100%;
        padding: 15px;
        font-size: 20px;
        border: 3px solid #333; /* Borde grueso */
