    // =================================================================
    // MODAL NUEVO LOTE
    // =================================================================
    function abrirModalNuevo() { 
        itemsTemp = [];
        document.getElementById('tbodyTemp').innerHTML=''; 
        document.getElementById('n_Comp').value=""; 
