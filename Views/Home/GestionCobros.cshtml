    function setupAuto(inpId, listId, hidId, src) {
        const i=document.getElementById(inpId), l=document.getElementById(listId), h=document.getElementById(hidId);
        i.addEventListener('input', function() {
            const tx = this.value.toLowerCase(); l.innerHTML=''; 
            if(!tx) { l.style.display='none'; return; }
            src.filter(x=>x.nombre.toLowerCase().includes(tx)).forEach(x=>{
                const d=document.createElement('div'); d.className='item-sugerencia'; d.textContent=x.nombre;
                d.onmousedown=()=>{ 
                    i.value=x.nombre; 
                    h.value=x.id; 
                    l.style.display='none'; 
                    if (inpId === 'txtN_OS' || inpId === 'txtV_OS') {
                         document.getElementById(inpId.replace('txt', '').replace('_OS', '_Imp').toLowerCase()).focus();
                    }
                };
                l.appendChild(d);
            });
            l.style.display='block';
        });
        i.addEventListener('blur', ()=>setTimeout(()=>{
             l.style.display='none'; 
             if(h.value == "0" && i.value) i.value = ''; 
        },200));
    }
    
