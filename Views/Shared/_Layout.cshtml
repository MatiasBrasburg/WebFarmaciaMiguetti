@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    // -----------------------------------------------------------
    // TRADUCTOR AUTOMÁTICO PARA EL ABUELO (Lógica C# en Vista)
    // -----------------------------------------------------------
    string controlador = ViewContext.RouteData.Values["controller"]?.ToString();
    string accion = ViewContext.RouteData.Values["action"]?.ToString();
    string tituloHumanizado = ViewData["Title"]?.ToString();

    // Si el título es genérico o técnico, lo forzamos a español simple
    if (string.IsNullOrEmpty(tituloHumanizado) || tituloHumanizado == "Index" || tituloHumanizado == "Home")
    {
        switch (controlador)
        {
            case "Home": tituloHumanizado = "PORTADA PRINCIPAL"; break;
            case "Facturas": tituloHumanizado = (accion == "Create") ? "NUEVA VENTA" : "HISTORIAL DE VENTAS"; break;
            case "Socios": tituloHumanizado = "PADRÓN DE AFILIADOS"; break;
            case "Medicamentos": tituloHumanizado = "CATÁLOGO DE PRODUCTOS"; break;
            case "ObrasSociales": tituloHumanizado = "LISTADO OBRAS SOCIALES"; break;
            case "Account": tituloHumanizado = "ACCESO AL SISTEMA"; break;
            default: tituloHumanizado = "SECCIÓN GENERAL"; break;
        }
    }
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@tituloHumanizado - Farmacia Miguetti</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-medical-blue py-3 shadow-sm">
            <div class="container-fluid px-4">
                
                <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-heart-pulse-fill text-medical-green fs-2"></i>
                    <span class="fw-bold tracking-wide">FARMACIA MIGUETTI</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto gap-3 align-items-center">
                        
                        <li class="nav-item">
                            <a class="nav-link @(controlador == "Facturas" ? "active" : "")" asp-controller="Facturas" asp-action="Create">
                                <i class="bi bi-cart4"></i> VENTA
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controlador == "Socios" ? "active" : "")" asp-controller="Socios" asp-action="Index">
                                <i class="bi bi-people"></i> SOCIOS
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controlador == "Medicamentos" ? "active" : "")" asp-controller="Medicamentos" asp-action="Index">
                                <i class="bi bi-capsule"></i> REMEDIOS
                            </a>
                        </li>

                        <div class="vr d-none d-lg-block text-white mx-2" style="opacity: 0.5;"></div>

                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm px-3 fw-bold rounded-pill" asp-controller="Home" asp-action="Home">
                                <i class="bi bi-grid-fill"></i> MENÚ
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-danger fw-bold" asp-controller="Account" asp-action="Logout" onclick="return confirmarSalida(event)" title="Salir">
                                <i class="bi bi-power fs-4"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="context-bar">
            <div class="container-fluid px-4 d-flex align-items-center justify-content-between">
                
                <button onclick="goBack()" class="btn-context-back">
                    <i class="bi bi-arrow-left"></i> VOLVER ATRÁS
                </button>

                <div class="current-page-title">
                    <span class="text-muted text-uppercase small ls-1">ESTÁS EN:</span>
                    <strong class="ms-2 text-primary">@tituloHumanizado</strong>
                </div>
            </div>
        </div>
    </header>

    <div class="container-fluid px-4 py-4 main-wrapper">
        <main role="main" class="fade-in">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3 bg-light border-top">
        <div class="container text-center">
            <span class="text-muted fw-bold">© 2025 FARMACIA MIGUETTI</span>
            <span class="mx-2">|</span>
            <span class="text-success"><i class="bi bi-circle-fill small"></i> SISTEMA OPERATIVO</span>
        </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <script>
        function goBack() {
            // Lógica inteligente: Si vengo de fuera, voy al home. Si navegué dentro, voy atrás.
            if (document.referrer && document.referrer.indexOf(window.location.hostname) !== -1) {
                history.back();
            } else {
                window.location.href = '@Url.Action("Index", "Home")';
            }
        }

        function confirmarSalida(e) {
            if (!confirm("¿Cerrar el sistema?")) {
                e.preventDefault();
                return false;
            }
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)


    <style>
        :root {
            --medical-blue: #2c3e50; /* Azul oscuro profesional */
            --medical-green: #2ecc71; /* Verde salud */
            --highlight-blue: #3498db; /* Azul brillante para acciones */
            --bg-gray: #f4f7f6;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: var(--bg-gray);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* NAVBAR */
        .bg-medical-blue { background-color: var(--medical-blue) !important; }
        .text-medical-green { color: var(--medical-green) !important; }
        
        .navbar-nav .nav-link {
            font-size: 1.05rem;
            font-weight: 500;
            color: rgba(255,255,255,0.85) !important;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            transition: all 0.2s;
        }
        .navbar-nav .nav-link:hover, .navbar-nav .nav-link.active {
            background-color: rgba(255,255,255,0.1);
            color: #fff !important;
        }

        /* BARRA DE CONTEXTO (SUB-HEADER) */
        .context-bar {
            background-color: #fff;
            border-bottom: 1px solid #e0e0e0;
            padding: 12px 0;
            box-shadow: 0 2px 5px rgba(0,0,0,0.03);
        }

        .btn-context-back {
            background: transparent;
            border: 2px solid #bdc3c7;
            color: #7f8c8d;
            padding: 6px 16px;
            border-radius: 50px; /* Redondo moderno */
            font-weight: 700;
            font-size: 0.9rem;
            transition: all 0.2s;
            text-transform: uppercase;
        }
        .btn-context-back:hover {
            border-color: var(--medical-blue);
            color: var(--medical-blue);
            background-color: #ecf0f1;
        }

        .current-page-title {
            font-size: 1.2rem;
            letter-spacing: 0.5px;
        }

        /* CONTENIDO PRINCIPAL */
        .main-wrapper {
            flex: 1;
        }
        
        /* Animación suave al cargar páginas */
        .fade-in {
            animation: fadeIn 0.4s ease-in;
        }
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* VALIDACIONES y UTILIDADES */
        .tracking-wide { letter-spacing: 1px; }
        
        /* Ajuste para inputs gigantes (Heredado de tu pedido anterior) */
        .form-control-lg {
            border-radius: 8px; /* Bordes suaves */
            box-shadow: none;
            border: 1px solid #ced4da;
        }
        .form-control-lg:focus {
            border-color: var(--highlight-blue);
            box-shadow: 0 0 0 4px rgba(52, 152, 219, 0.15); /* Glow suave azul */
        }
    </style>
</body>
</html>