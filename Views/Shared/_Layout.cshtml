@using Microsoft.AspNetCore.Http
@using System.Text.Json
@using WebFarmaciaMiguetti.Models
@inject IHttpContextAccessor HttpContextAccessor

@{
    // 1. DETECTAR SI ES LOGIN PARA OCULTAR EL MENÚ
    bool ocultarMenu = ViewData["OcultarMenu"] as bool? ?? false;
Usuario usuarioActual = null;
    string nombreFarmacia = "FARMACIA MIGHETTI"; // Valor por defecto (Fallback)

    var usuarioJson = HttpContextAccessor.HttpContext.Session.GetString("Usuario");
    if (!string.IsNullOrEmpty(usuarioJson))
    {
        try 
        {
            var options = new JsonSerializerOptions { PropertyNameCaseInsensitive = true };
            usuarioActual = JsonSerializer.Deserialize<Usuario>(usuarioJson, options);
            
            if (usuarioActual != null && !string.IsNullOrEmpty(usuarioActual.RazonSocial))
            {
                nombreFarmacia = usuarioActual.RazonSocial.ToUpper();
            }
        }
        catch { } // Si falla, queda el valor por defecto
    }
    // 2. TU LÓGICA ORIGINAL DE TÍTULOS
    string controlador = ViewContext.RouteData.Values["controller"]?.ToString();
    string accion = ViewContext.RouteData.Values["action"]?.ToString();
    string tituloHumanizado = ViewData["Title"]?.ToString();

    if (string.IsNullOrEmpty(tituloHumanizado) || tituloHumanizado == "Index" || tituloHumanizado == "Home")
    {
        switch (controlador)
        {
            case "Home": tituloHumanizado = "PORTADA PRINCIPAL"; break;
            case "Facturas": tituloHumanizado = (accion == "Create") ? "NUEVA VENTA" : "HISTORIAL DE VENTAS"; break;
            case "Socios": tituloHumanizado = "PADRÓN DE AFILIADOS"; break;
            case "Medicamentos": tituloHumanizado = "CATÁLOGO DE PRODUCTOS"; break;
            case "ObrasSociales": tituloHumanizado = "LISTADO OBRAS SOCIALES"; break;
            case "Account": tituloHumanizado = "ACCESO AL SISTEMA"; break;
            default: tituloHumanizado = "SECCIÓN GENERAL"; break;
        }
    }
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@tituloHumanizado - @nombreFarmacia</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    @if (!ocultarMenu)
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-medical-blue py-3 shadow-sm">
                <div class="container-fluid px-4">
                    <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-heart-pulse-fill text-medical-green fs-2"></i>
                        <span class="fw-bold tracking-wide">@nombreFarmacia</span>
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="mainNav">
                        <ul class="navbar-nav ms-auto gap-3 align-items-center">
                            
        
                            <a class="nav-link" href='@Url.Action("IrAAltasModificacionesMandatarias", "Home")'>Altas M</a>
                            <a class="nav-link" href='@Url.Action("IrAAltasModificacionesOS", "Home")'>Altas O.S</a>
                            <a class="nav-link" href='@Url.Action("IrAMostrarModificaciones", "Home")'>Gestion Presentaciones</a>
                              <a class="nav-link" href='@Url.Action("IrAGestionCobros", "Home")'>Gestión Cobros</a>
                            <a class="nav-link" href='@Url.Action("IrAConfiguracion", "Home")'>Configuración</a>
                          

                            <div class="vr d-none d-lg-block text-white mx-2" style="opacity: 0.5;"></div>

                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-sm px-3 fw-bold rounded-pill" asp-controller="Home" asp-action="Home">
                                    <i class="bi bi-grid-fill"></i> MENÚ
                                </a>
                            </li>
                             <li class="nav-item ms-3">
    <button type="button" 
            class="btn btn-danger btn-lg px-4 fw-bold rounded-pill shadow-sm" 
            data-bs-toggle="modal" 
            data-bs-target="#modalConfirmarSalida"
            style="border: 2px solid white;">
        <i class="bi bi-box-arrow-right"></i> SALIR DEL SISTEMA
    </button>
</li>
                         
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="context-bar">
                <div class="container-fluid px-4 d-flex align-items-center justify-content-between">
                    <button onclick="goBack()" class="btn-context-back">
                        <i class="bi bi-arrow-left"></i> VOLVER ATRÁS
                    </button>

                    <div class="current-page-title">
                        <span class="text-muted text-uppercase small ls-1">ESTÁS EN:</span>
                        <strong class="ms-2 text-primary">@tituloHumanizado</strong>
                    </div>
                </div>
            </div>
        </header>
    }

    <div class="container-fluid @(ocultarMenu ? "p-0" : "px-4 py-4") main-wrapper">
        <main role="main" class="fade-in" style="@(ocultarMenu ? "height: 100vh;" : "")">
            @RenderBody()
        </main>
    </div>

    @if (!ocultarMenu)
    {
        <footer class="footer mt-auto py-3 bg-light border-top">
            <div class="container text-center">
                <span class="text-muted fw-bold">© 2025 @nombreFarmacia</span>
                <span class="mx-2">|</span>
                <span class="text-success"><i class="bi bi-circle-fill small"></i> SISTEMA OPERATIVO</span>
            </div>
        </footer>
    }
<div class="modal fade" id="modalConfirmarSalida" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered modal-lg"> <div class="modal-content border-0 shadow-lg">
            
            <div class="modal-header bg-danger text-white py-3">
                <h2 class="modal-title fw-bold" id="exampleModalLabel">
                    <i class="bi bi-exclamation-triangle-fill"></i> ¿DESEA SALIR?
                </h2>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body text-center py-5">
                <h3 class="fw-bold text-dark mb-3" style="font-size: 1.8rem;">
                    ¿Está seguro que quiere cerrar el sistema?
                </h3>
                <p class="text-muted" style="font-size: 1.3rem;">
                    Si sale ahora, deberá ingresar su contraseña nuevamente para volver a entrar.
                </p>
            </div>

            <div class="modal-footer justify-content-center gap-4 pb-5 bg-light">
                <button type="button" class="btn btn-secondary px-5 py-3 fs-4 rounded-pill border-2" data-bs-dismiss="modal">
                    ❌ NO, ME QUEDO
                </button>
                
                <a href="/Account/CerrarSesion" class="btn btn-danger px-5 py-3 fs-4 fw-bold rounded-pill border-2 shadow">
                    🚪 SÍ, SALIR AHORA
                </a>
            </div>

        </div>
    </div>
</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> 
    
    <script>
        function goBack() {
            if (document.referrer && document.referrer.indexOf(window.location.hostname) !== -1) {
                history.back();
            } else {
                window.location.href = '@Url.Action("Index", "Home")';
            }
        }

        function confirmarSalida(e) {
            if (!confirm("¿Cerrar el sistema?")) {
                e.preventDefault();
                return false;
            }
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)

    <style>
        :root {
            --medical-blue: #2c3e50;
            --medical-green: #2ecc71;
            --highlight-blue: #3498db;
            --bg-gray: #f4f7f6;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: var(--bg-gray);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
header { position: sticky; top: 0; z-index: 1000; }
        /* NAVBAR */
        .bg-medical-blue { background-color: var(--medical-blue) !important; }
        .text-medical-green { color: var(--medical-green) !important; }
        
        .navbar-nav .nav-link {
            font-size: 1.05rem;
            font-weight: 500;
            color: rgba(255,255,255,0.85) !important;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            transition: all 0.2s;
        }
        .navbar-nav .nav-link:hover, .navbar-nav .nav-link.active {
            background-color: rgba(255,255,255,0.1);
            color: #fff !important;
        }

        /* BARRA DE CONTEXTO */
        .context-bar {
            background-color: #fff;
            border-bottom: 1px solid #e0e0e0;
            padding: 12px 0;
            box-shadow: 0 2px 5px rgba(0,0,0,0.03);
        }

        .btn-context-back {
            background: transparent;
            border: 2px solid #bdc3c7;
            color: #7f8c8d;
            padding: 6px 16px;
            border-radius: 50px;
            font-weight: 700;
            font-size: 0.9rem;
            transition: all 0.2s;
            text-transform: uppercase;
        }
        .btn-context-back:hover {
            border-color: var(--medical-blue);
            color: var(--medical-blue);
            background-color: #ecf0f1;
        }

        .current-page-title {
            font-size: 1.2rem;
            letter-spacing: 0.5px;
        }

        .main-wrapper { flex: 1; }
        
        .fade-in { animation: fadeIn 0.4s ease-in; }
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .tracking-wide { letter-spacing: 1px; }
        
        .form-control-lg {
            border-radius: 8px;
            box-shadow: none;
            border: 1px solid #ced4da;
        }
        .form-control-lg:focus {
            border-color: var(--highlight-blue);
            box-shadow: 0 0 0 4px rgba(52, 152, 219, 0.15);
        }
    </style>
</body>
</html>